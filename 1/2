package homework1_2;

import java.util.Scanner;


public class HomeWork1_2 {

    
    public static void main(String[] args)
    {
        
        System.out.println ("Введите массу динозавра в кг");
Scanner in = new Scanner(System.in);
double massa= in.nextDouble();
double massaT;
double massaG;
double massaMG;
massaT=massa/1000;
massaG= massa*1000;
massaMG=massa*1000000;
System.out.println ("Mассу динозавра в тоннах равна " + massaT);
System.out.println ("Mассу динозавра в грамма равна " + massaG);
System.out.println ("Mассу динозавра в миллиграммах равна " + massaMG);
    }  
}
