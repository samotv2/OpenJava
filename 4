
package homework1_4;

import java.util.Scanner;


public class Homework1_4 {

    public static void main(String[] args) {
       System.out.println ("Введите первую цифру числа N");
Scanner in = new Scanner(System.in);
int a= in.nextInt();
  System.out.println ("Введите вторую цифру числа N");
int b= in.nextInt();
  System.out.println ("Введите третью цифру числа N");
int c= in.nextInt();
  System.out.println ("Введите четверую цифру числа N");
int d= in.nextInt();
{
            
       if (a < b && b < c && c < d){
            System.out.println("цифры в числе N расположены в порядке возрастания");
        }
        else{
            System.out.println("цифры в числе N не расположены в порядке возрастания");
        }
    } 
    }
    
}
